<header>
    <div class="content-container">
        <div class="header-container">
            <h1>{{account.firstName}} {{account.lastName}} </h1>
        </div>
        <div class="header-container">   
            <a href="/accounts/{{account._id}}/edit">
            <input type="button" value="Edit" class="header-button"/>
            </a>

            <form method="POST" action="/accounts/{{account._id}}?_method=DELETE">
            <input type="submit" value="Delete" class="header-button" />
            </form>
        </div>
    </div>
</header>
<main>
    <div class="content-container">
        <div class="recipie-list-header">
            <h2>Recipies</h2>
            <a href="/recipies/{{account._id}}/new-recipe-form">
                <input type="button" value="New Recipe" class="inverse-header-button"/>
            </a>
        </div>
        <div class="recipies-container">
        {{#each account.recipies}}
            <a href="/recipies/{{_id}}">
                <div class="sub-container">
                    <div class="sub-container-head">
                        <a href="/recipies/{{_id}}">{{name}}</a>
                    </div>
                    <div class="sub-container-body">
                        {{#each ingredients}}
                            <p>{{this}}</p>
                        {{/each}}
                    </div>
                </div>
            </a>
        {{/each}}
        </div>
    </div>
</main>

<h2>your grocery lists</h2>
{{#each account.lists}}
    <ul>
        <li>
            <a href="/grocery/{{_id}}/{{acctId}}">
                {{name}}
            </a>
        </li>
    </ul>
{{/each}}




<a href="/grocery/{{account._id}}/new-grocery-form">
    <input type="button" value="add new grocey list" />
</a>