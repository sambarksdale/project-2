<h1>{{recipe.name}}</h1>
<form method="POST" action="/grocery/update">

{{#each recipe.ingredients}}
    <div> 
        <input class="item-checkbox" id="checkbox-{{@index}}" type="checkbox" />
        <l1>{{this}}</l1> 
        <input type="text" value="{{this}}" class="hidden-item-input" />   
    </div>
{{/each}}

<div class="dropdown">
  <button class="dropbtn">Shopping Lists</button>
  <div class="dropdown-content">
    {{#each recipe.lists}}
        <div>
            <li>{{name}}</li> <input class="list-checkbox" id="checkbox-{{@index}}" type="checkbox" />
            <input type="text" value="{{this._id}}" class="hidden-list-input" />   
        </div>
    {{/each}}
  </div>
</div>

<input type="submit" value="add to shopping list" />
</form>



<p>{{recipe.instructions}}</p>



