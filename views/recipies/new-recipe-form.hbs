<h1>{{account._id}}</h1>

<form method="POST" action="/recipies/{{account._id}}/new-recipe-form">
    <div class="new-recipe-form-module" >
        <label for="name">recipe name</label>
        <input type="text" name="name" value="" />
    </div>
    <div class="new-recipe-form-module" id="input-module-0">
        <label for="ingredients">ingredient</label>
        <input type="text" name="ingredients" value="" id="ingredient-0"/>
    </div>
    <div class="new-recipe-form-module" id="addIngredient" >
        <input type="button" value="+ ingredient" />
    </div>
    <div class="new-recipe-form-module" >
        <label for="instructions">instructions</label>
        <input type="text" name="instructions" value="" />
    </div>
    <div class="new-recipe-form-module" >
        <input type="submit" value="add recipe" />
    </div>
</form>


